/dts-v1/;

#include <arm/armv8-m.dtsi>
#include <dt-bindings/i2c/i2c.h>

/ {
	compatible = "arm,mps2";
	#address-cells = <1>;
	#size-cells = <1>;

	chosen {
		zephyr,console = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	cpus {
		cpu@0 {
			compatible = "arm,cortex-m33";
		};
	};

	sram0: memory {
		compatible = "mmio-sram";
		reg = <0x20010000 0x100000>;
	};

	flash0: flash {
		reg = <0x00230400 0x1ffc00>;
	};

	soc {
		timer0: timer@40000000 {
			compatible = "arm,cmsdk-timer";
			reg = <0x40000000 0x1000>;
			interrupts = <3 3>;
		};

		timer1: timer@40001000 {
			compatible = "arm,cmsdk-timer";
			reg = <0x40001000 0x1000>;
			interrupts = <4 3>;
		};

		dtimer0: dtimer@40002000 {
			compatible = "arm,cmsdk-dtimer";
			reg = <0x40002000 0x1000>;
			interrupts = <5 3>;
		};

		gpio0: gpio@40110000 {
			compatible = "arm,cmsdk-gpio";
			reg = <0x40110000 0x1000>;
			interrupts = <68 3>;
		};

		uart0: uart@40101000 {
			compatible = "arm,cmsdk-uart";
			reg = <0x40101000 0x1000>;
			interrupts = <33 3 32 3>;
			interrupt-names = "tx", "rx";
			current-speed = <115200>;
			label = "UART_0";
		};

		uart1: uart@40102000 {
			compatible = "arm,cmsdk-uart";
			reg = <0x40102000 0x1000>;
			interrupts = <35 3 34 3>;
			interrupt-names = "tx", "rx";
			current-speed = <115200>;
			label = "UART_1";
		};

		i2c_touch: i2c@40104000 {
			compatible = "arm,versatile-i2c";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x40104000 0x1000>;
			label = "I2C_TOUCH";
		};

		i2c_audio_conf: i2c@40105000 {
			compatible = "arm,versatile-i2c";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x40105000 0x1000>;
			label = "I2C_AUDIO_CONF";
		};
	};
};

&nvic {
	arm,num-irq-priority-bits = <3>;
};
